/* app.wxss - 全局样式优化 */
page {
  background-color: #f5f7fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  color: #2c3e50;
}

.container {
  padding: 0;
  box-sizing: border-box;
  min-height: 100vh;
}

/* 全局卡片样式 */
.card {
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  margin: 0 24rpx 24rpx;
  overflow: hidden;
}

/* 全局标题样式 */
.title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  color: #2c3e50;
  letter-spacing: 1rpx;
}

/* 全局按钮样式 */
.btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: inline-block;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.btn:active {
  transform: scale(0.96);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.2);
}

/* 全局输入框样式 */
.input {
  width: 100%;
  padding: 24rpx 28rpx;
  border: 2rpx solid #e8ecf1;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background: white;
  transition: all 0.3s ease;
}

.input:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

/* 全局新闻项样式 */
.news-item {
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f2f5;
  margin-bottom: 0;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
}

.news-item:active {
  background-color: #f8f9fa;
  transform: translateX(4rpx);
}

.news-item:last-child {
  border-bottom: none;
}

.news-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 12rpx;
  color: #2c3e50;
  line-height: 1.5;
}

.news-date {
  font-size: 24rpx;
  color: #95a5a6;
  font-weight: 400;
}

/* 全局加载样式 */
.loading {
  text-align: center;
  padding: 60rpx 20rpx;
  color: #95a5a6;
  font-size: 28rpx;
}

/* 全局空状态样式 */
.empty-state {
  text-align: center;
  padding: 80rpx 20rpx;
  color: #95a5a6;
  font-size: 28rpx;
  background: white;
  border-radius: 16rpx;
  margin: 0 24rpx;
}

/* 全局页脚样式 */
.footer {
  text-align: center;
  padding: 40rpx 20rpx 60rpx;
  color: #95a5a6;
  font-size: 24rpx;
  letter-spacing: 0.5rpx;
}