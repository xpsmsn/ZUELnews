/* news.wxss - 精致阅读体验版 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f7fa 0%, #e8ecf1 100%);
  padding: 0;
  padding-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  animation: fadeIn 0.6s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 新闻标题区域 */
.news-header {
  background: white;
  padding: 40rpx 32rpx;
  border-radius: 0 0 24rpx 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  position: relative;
  animation: slideDown 0.8s ease-out 0.2s both;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.news-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
}

.news-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #2c3e50;
  line-height: 1.4;
  margin-bottom: 20rpx;
  letter-spacing: 0.5rpx;
}

.news-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex-wrap: wrap;
}

.news-date {
  font-size: 26rpx;
  color: #95a5a6;
  font-weight: 400;
  display: flex;
  align-items: center;
}

.news-source {
  font-size: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.2);
}

/* 新闻链接区域 */
.news-link-section {
  background: white;
  margin: 24rpx;
  padding: 28rpx 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  position: relative;
}

.news-link-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx 16rpx 0 0;
}

.link-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #2c3e50;
  display: flex;
  align-items: center;
}

.link-content {
  font-size: 22rpx;
  color: #667eea;
  background: #f5f7fa;
  padding: 14rpx 18rpx;
  border-radius: 10rpx;
  word-break: break-all;
  line-height: 1.5;
  border: 2rpx solid #e8ecf1;
}

.view-original-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 16rpx 32rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  align-self: flex-start;
}

.view-original-btn:active {
  transform: scale(0.96);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.2);
}

/* 新闻正文区域 */
.news-content {
  background: white;
  margin: 0 24rpx;
  padding: 0;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
  position: relative;
}

.news-content::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
}

.content-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx 20rpx;
  border-bottom: 1rpx solid #f0f2f5;
}

.content-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
  display: flex;
  align-items: center;
  letter-spacing: 1rpx;
}

.content-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.action-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f7fa;
  transition: all 0.3s ease;
}

.action-btn.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.action-btn.favorite.active {
  background: linear-gradient(135deg, #f59e0b 0%, #f97316 100%);
}

.action-icon {
  font-size: 28rpx;
  color: #667eea;
}

.action-btn.active .action-icon,
.action-btn.favorite.active .action-icon {
  color: white;
}

/* 正文内容 */
.content-body {
  padding: 0;
}

.content-text {
  font-size: 32rpx;
  color: #2c3e50;
  line-height: 2;
  font-weight: 400;
  text-align: left;
  letter-spacing: 0.5rpx;
  white-space: pre-wrap;
  word-break: break-word;
  padding: 24rpx 32rpx;
}

.content-image {
  display: block;
  max-width: 100%;
  margin: 16rpx auto;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.content-table-wrapper {
  padding: 16rpx 32rpx;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
}

.content-table {
  display: table;
  width: 100%;
  table-layout: fixed;
  border-collapse: collapse;
  border: 1rpx solid #e8ecf1;
  border-radius: 8rpx;
  overflow: hidden;
}

.table-row {
  display: table-row;
}

.table-row:first-child .table-cell {
  background: #f5f7fa;
  font-weight: 600;
  color: #1a1a1a;
}

.table-cell {
  display: table-cell;
  padding: 16rpx 12rpx;
  font-size: 26rpx;
  color: #2c3e50;
  border-bottom: 1rpx solid #e8ecf1;
  border-right: 1rpx solid #e8ecf1;
  word-break: break-all;
  vertical-align: top;
}

.table-row:last-child .table-cell {
  border-bottom: none;
}

.table-cell:last-child {
  border-right: none;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 20rpx;
  background: white;
  margin: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid #f0f2f5;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 32rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  color: #95a5a6;
  font-size: 28rpx;
  font-weight: 400;
  letter-spacing: 1rpx;
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 20rpx;
  background: white;
  margin: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.retry-btn {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: white;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 12rpx 36rpx;
  border-radius: 12rpx;
  border: none;
}

.error-image {
  width: 450rpx;
  height: 450rpx;
  margin-bottom: 24rpx;
}

.error-text {
  color: #95a5a6;
  font-size: 28rpx;
  font-weight: 400;
  letter-spacing: 1rpx;
}

.error-hint {
  color: #b0b0b0;
  font-size: 24rpx;
  margin-top: 16rpx;
  text-align: center;
  padding: 0 40rpx;
  line-height: 1.5;
}
