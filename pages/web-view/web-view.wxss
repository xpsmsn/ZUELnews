/* web-view.wxss */
.container {
  width: 100%;
  height: 100vh;
  position: relative;
}

web-view {
  width: 100%;
  height: 100%;
}

.loading {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(255, 255, 255, 0.8);
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  text-align: center;
  z-index: 100;
}

.loading text {
  font-size: 28rpx;
  color: #333;
}

.error {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(255, 255, 255, 0.9);
  padding: 40rpx;
  border-radius: 10rpx;
  text-align: center;
  z-index: 100;
  width: 80%;
  max-width: 500rpx;
}

.error-text {
  font-size: 28rpx;
  color: #ff4d4f;
  margin-bottom: 30rpx;
  display: block;
}

.btn {
  margin: 15rpx 0;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
  background-color: #07c160;
  color: white;
  border: none;
  width: 80%;
}

.btn:nth-child(3) {
  background-color: #1989fa;
}
